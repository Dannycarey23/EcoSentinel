<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoSentinel.WeatherSensorPage"
             xmlns:local="clr-namespace:EcoSentinel.View"
             >

        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/> <!-- Header -->
            <RowDefinition Height="*"/>  <!-- Map & Node List -->
            <RowDefinition Height="*"/>  <!-- Sensor Data -->
            <RowDefinition Height="20"/> <!-- Footer -->
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <local:HeaderPage/>
        </Grid>
        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            

           <Frame 
                x:Name="mapFrame"
                Grid.Row="0"
                Grid.Column="0"
                Margin="5"
                BackgroundColor="Blue"
                 >
                 <Label Text="Map Will Go Here" 
                        HorizontalOptions="Center" 
                        VerticalOptions="Center" 
                        FontSize="24" 
                        TextColor="White"/>
            </Frame>
            <Frame
                x:Name="nodeListFrame"
                Grid.Row="0"
                Grid.Column="1" 
                Margin="5"
                BackgroundColor="Green">
                <Label Text="Node List Will Go Here" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       FontSize="24" 
                       TextColor="White"/>
            </Frame>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame
                x:Name="sensorDataFrame"
                Grid.Row="0"
                Grid.Column="0" 
                Margin="5"
                BackgroundColor="Yellow"> 
                <Label Text="Sensor Data Will Go Here" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       FontSize="24" 
                       TextColor="Black"/>
            </Frame>
        </Grid>
        <Grid Grid.Row="3">
            <local:FooterPage/>
        </Grid>
    </Grid>  
</ContentPage>