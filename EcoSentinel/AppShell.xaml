<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EcoSentinel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EcoSentinel"
    xmlns:view="clr-namespace:EcoSentinel.View"
    Shell.FlyoutBehavior="Flyout"
    Title="EcoSentinel">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Landing Page"
        ContentTemplate="{DataTemplate local:LandingPage}"
        Route="LandingPage" />
    <ShellContent
        Title="AirSensorPage"
        ContentTemplate="{DataTemplate local:AirSensorPage}"
        Route="AirSensorPage" />
    <ShellContent
        Title="WaterSensorPage"
        ContentTemplate="{DataTemplate local:WaterSensorPage}"
        Route="WaterSensorPage" />
    <ShellContent 
        Title="WeatherSensorPage"
        ContentTemplate="{DataTemplate local:WeatherSensorPage}"
        Route="WeatherSensorPage" />
    <ShellContent 
        Title="Login"
        ContentTemplate="{DataTemplate view:LoginPage}"
        Route="LoginPage" />
    <ShellContent 
        Title="Administration"
        ContentTemplate="{DataTemplate view:AdministrationPage}"
        Route="AdministrationPage" />   

    <ShellContent 
        Title="Historical Data"
        ContentTemplate="{DataTemplate view:HistoricalDataPage}"
        Route="HistoricalDataPage" />
  
   <ShellContent 
        Title="SensorStatusPage"
        ContentTemplate="{DataTemplate local:SensorStatusPage}"
        Route="SensorStatusPage" />


</Shell>
